@{
    ViewData["Title"] = "Resident Page";
    Layout = "_ManagerLayout";
}
@model ICollection<_2051010166_NguyenTranThanhLiem.Models.Person>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Trang quản lý cư dân</h1>
        <a href="@Url.Action("CreateResident","Manager")" class="btn btn-success">Thêm mới</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Họ và tên</th>
                    <th>Số CMND/CCCD</th>
                    <th>Địa chỉ</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Giới tính</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.FullName</td>
                        <td>@person.DocumentNumber</td>
                        <td>@person.Address</td>
                        <td>@person.Email</td>
                        <td>@person.PhoneNumber</td>
                        <td>@(person.Sex == 0 ? "Nữ" : "Nam")</td>
                        <td>
                            <a href="@Url.Action("EditResident","Manager", new { id=person.Id })" class="btn btn-primary btn-sm me-1">Sửa</a>
                            <a href="@Url.Action("DeleteResident","Manager", new { id=person.Id })" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
