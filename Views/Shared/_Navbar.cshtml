@{
    ViewData["Title"] = "Navbar";
}
@using Microsoft.AspNetCore.Identity

<!-- Navbar.cshtml -->
<nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
    <div class="container-fluid">
        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <img src="~/images/Logo_SNAT.jpg" alt="Logo" class="logo-img" />
            <span class="ms-2 fw-bold">Chung cư SNAT</span>
        </a>

        <!-- Toggle button responsive -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menu -->
        <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-4">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">Giới thiệu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Nút Tiện ích -->
                    <li class="nav-item me-2">
                        @{
                            var roleController = "Resident"; // mặc định
                            if (User.IsInRole("Admin")) roleController = "Admin";
                            else if (User.IsInRole("Manager")) roleController = "Manager";
                        }
                        <a class="btn btn-info btn-sm" asp-controller="@roleController" asp-action="Index">Tiện ích</a>

                    </li>

                    <!-- Nút Đăng xuất -->
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post"
                              class="d-inline logout-form" onsubmit="return confirm('Bạn có chắc chắn muốn đăng xuất không?')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-light btn-sm">Đăng xuất</button>
                        </form>

                    </li>
                }
                else
                {
                    <!-- Nút Đăng nhập -->
                    <li class="nav-item">
                        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    </li>
                }
            </ul>



        </div>
    </div>
</nav>
